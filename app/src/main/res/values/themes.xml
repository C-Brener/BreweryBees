<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/yellow_bees</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Rating_Bar_Small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_small</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">17.43dp</item>
    </style>

    <style name="Widget.App.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_small</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:maxHeight">34dp</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:isIndicator">false</item>
    </style>
</resources>