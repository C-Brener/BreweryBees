<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BreweryBees" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_bees</item>
        <item name="colorSecondaryVariant">@color/yellow_bees</item>
        <item name="colorOnSecondary">@color/yellow_bees</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

<!--        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>-->

<!--        <item name="materialButtonStyle">@style/Widget.App.Button</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="Theme.BreweryBees.Splash">
        <item name="android:statusBarColor">@color/yellow_bees</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--  Start Toolbar-->
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Subtitle1</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/yellow_bees</item>
    </style>
    <!-- End Toolbar   -->
</resources>